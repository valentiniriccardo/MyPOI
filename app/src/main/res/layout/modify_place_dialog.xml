<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:textAlignment="gravity">
    <!--android:background="@drawable/ic_rounded_rectangle"-->
    <EditText
        android:id="@+id/addplace_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:autofillHints="Modifica del posto"
        android:fontFamily="@font/inter_light"
        android:includeFontPadding="true"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLength="32"
        android:maxLines="1"
        android:minHeight="48dp"
        android:minLines="1"
        android:singleLine="true"
        android:digits="0123456789AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZzÁáÂâÃãÀàÇçÉéÊêÍíÓóÔôÕõÚú@òàùèé"/>

    <!--test-->

    <!--test-->

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/teal_700" />

    <TextView
        android:id="@+id/label_tipologia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/inter_light"
        android:includeFontPadding="true"
        android:minHeight="48dp"
        android:text="@string/string_mod_tipologia"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/options_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_mod_speciale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:drawableStart="@drawable/speciale"
                android:drawablePadding="8dp"
                android:drawableTint="@android:color/holo_blue_light"
                android:fontFamily="@font/inter_light"
                android:includeFontPadding="true"
                android:text="Speciale"
                android:textAlignment="viewStart"
                android:tooltipText="33B5E5#speciale"
                android:typeface="normal" />

            <RadioButton
                android:id="@+id/rb_mod_casa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/casa"
                android:drawablePadding="8dp"
                android:drawableTint="@android:color/holo_green_light"
                android:fontFamily="@font/inter_light"
                android:includeFontPadding="true"
                android:text="Casa"
                android:textAlignment="viewStart"
                android:tooltipText="99CC00#casa"
                android:typeface="normal" />

            <RadioButton
                android:id="@+id/rb_mod_cibo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/cibo"
                android:drawablePadding="8dp"
                android:drawableTint="@android:color/holo_blue_dark"
                android:fontFamily="@font/inter_light"
                android:includeFontPadding="true"
                android:text="Cibo"
                android:textAlignment="viewStart"
                android:tooltipText="0099CC#cibo"
                android:typeface="normal" />

            <RadioButton
                android:id="@+id/rb_mod_divertimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/divertimento"
                android:drawablePadding="8dp"
                android:drawableTint="@android:color/holo_red_light"
                android:fontFamily="@font/inter_light"
                android:includeFontPadding="true"
                android:text="Divertimento"
                android:textAlignment="viewStart"
                android:tooltipText="FF4444#divertimento"
                android:typeface="normal" />

            <RadioButton
                android:id="@+id/rb_mod_lavoro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/lavoro"
                android:drawablePadding="8dp"
                android:drawableTint="@android:color/holo_orange_light"
                android:fontFamily="@font/inter_light"
                android:includeFontPadding="true"
                android:text="Lavoro"
                android:textAlignment="viewStart"
                android:tooltipText="FFBB33#lavoro"
                android:typeface="normal" />

            <RadioButton
                android:id="@+id/rb_mod_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/bar"
                android:drawablePadding="8dp"
                android:drawableTint="#512DA8"
                android:fontFamily="@font/inter_light"
                android:includeFontPadding="true"
                android:text="Bar"
                android:textAlignment="viewStart"
                android:tooltipText="512DA8#bar"
                android:typeface="normal" />

            <RadioButton
                android:id="@+id/rb_mod_sport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/sport"
                android:drawablePadding="8dp"
                android:drawableTint="@android:color/holo_orange_dark"
                android:fontFamily="@font/inter_light"
                android:includeFontPadding="true"
                android:text="Sport"
                android:textAlignment="viewStart"
                android:tooltipText="FF8800#sport"
                android:typeface="normal" />

        </RadioGroup>
    </ScrollView>

</LinearLayout>